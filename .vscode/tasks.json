{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17", // Add this line for C++17 support
                // "-v", // Add this line for verbose output
                "${file}",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}", // Output to the bin directory
                "-lgtest",
                "-lgtest_main",
                "-pthread",
                "-I",
                "${workspaceFolder}/cget/include/",
                "-L",
                "${workspaceFolder}/cget/lib/**"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}